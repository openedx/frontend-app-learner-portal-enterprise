{
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "major": {
    "dependencyDashboardApproval": true
  },
  "patch": {
    "automerge": true
  },
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/@edx/",
        "/@openedx/"
      ]
    }
  ]
}
